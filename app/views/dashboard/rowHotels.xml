<Alloy>
	<TableViewRow id='rowHotel' layout="horizontal" onClick="doClickRow">
		<View layout="horizontal" >
			<View id='containerImg'  layout="vertical">
				<ImageView id='imgAlbum'/>
			</View>
			<View id='containerSection' layout="vertical">
				<Label id="lblName" class="row1"/>
				<View layout="horizontal" height="Ti.UI.SIZE">
					<Label class="row2">Distancia:</Label>
					<Label id="lblDistance" class="row2"/>
				</View>
				<View layout="horizontal" height="Ti.UI.SIZE">
					<Label class="row2">Habitacion simple:</Label>
					<ImageView id='imgPrice'/>
					<Label id="lblPrice" class="row2 cGreen"></Label>
					<Label id="lblCurrency" class="row2 cGreen"></Label>
				</View>
			</View>
		</View>
	</TableViewRow>
</Alloy>