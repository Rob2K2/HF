<Alloy>
	<TabGroup backgroundColor="white" >
		<Tab id="tabInfo" title="Information" >
			<Window id="winInfo">
				<ImageView id='imgHotel'/>
				<ScrollView id="scrollView">
					<View >
						<Label id="lblName" class="lblTitle" />
						<Label class="lblSubTitle">Web:</Label>
						<Label id="lblWeb" class="lblDetail" />
						<Label class="lblSubTitle">Teléfono:</Label>
						<Label id="lblPhone" class="lblDetail" />
						<Label class="lblSubTitle">Dirección:</Label>
						<Label id="lblAddress" class="lblDetail" />
						<Label class="lblSubTitle">Reseña:</Label>
						<Label id="lblSummary" class="lblDetail" />
						<Label class="lblSubTitle">Caracteristicas de las habitaciones:</Label>
						<Label id="lblRooms" class="lblDetail" />
					</View>
				</ScrollView>
			</Window>
		</Tab>
		<Tab id="tabPrice" title="Price" >
			<Window id="winPrice">
				<ImageView id='imgHotel2'/>
				<ScrollView id="scrollView">
					<View >
						<Label class="lblSubTitle">Habitación simple:</Label>
						<View class="vwPrice">
							<ImageView id='imgPrice'/>
							<Label id="lblSingleR" class="lblDetail"/>
							<Label class="lblCurrency">Bs</Label>
						</View>
						<Label class="lblSubTitle">Habitacion doble:</Label>
						<View class="vwPrice">
							<ImageView id='imgPrice'/>
							<Label id="lblDoubleR" class="lblDetail"/>
							<Label class="lblCurrency">Bs</Label>
						</View>
						<Label class="lblSubTitle">Habitacion triple:</Label>
						<View class="vwPrice">
							<ImageView id='imgPrice'/>
							<Label id="lblTripleR" class="lblDetail"/>
							<Label class="lblCurrency">B</Label>
						</View>
						<Label class="lblSubTitle">Habitacion familiar:</Label>
						<View class="vwPrice">
							<ImageView id='imgPrice'/>
							<Label id="lblFamiliarR" class="lblDetail"/>
							<Label class="lblCurrency">Bs</Label>
						</View>
						<Label class="lblSubTitle">Suite matrimonial:</Label>
						<View class="vwPrice">
							<ImageView id='imgPrice'/>
							<Label id="lblMatrimonialR" class="lblDetail"/>
							<Label class="lblCurrency">Bs</Label>
						</View>
					</View>
				</ScrollView>
			</Window>
		</Tab>
		<Tab id="tabMapa" title="Map" >
			<Window id="winMap"></Window>
		</Tab>
	</TabGroup>
</Alloy>