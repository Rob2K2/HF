<Alloy>
	<TabGroup backgroundColor="white" >
		<Tab id="tabInfo" title="Information" >
			<Window id="winInfo">
				<ImageView id='imgHotel'/>
				<ScrollView id="scrollView">
					<View >
						<Label id="lblName" class="lblTitle" />
						<Label class="lblSubTitle" text="L('lblWeb')"></Label>
						<Label id="lblWeb" class="lblDetail" />
						<Label class="lblSubTitle" text="L('lblPhone')"></Label>
						<Label id="lblPhone" class="lblDetail" />
						<Label class="lblSubTitle" text="L('lblAddress')"></Label>
						<Label id="lblAddress" class="lblDetail" />
						<Label class="lblSubTitle" text="L('lblSummary')"></Label>
						<Label id="lblSummary" class="lblDetail" />
						<Label class="lblSubTitle" text="L('lblRooms')"></Label>
						<Label id="lblRooms" class="lblDetail" />
					</View>
				</ScrollView>
			</Window>
		</Tab>
		<Tab id="tabPrice" title="Price" >
			<Window id="winPrice">
				<ImageView id='imgHotel2'/>
				<ScrollView id="scrollView">
					<View >
						<Label class="lblSubTitle" text="L('lblSingleR')"></Label>
						<View class="vwPrice">
							<ImageView id='imgPrice'/>
							<Label id="lblSingleR" class="lblDetail"/>
							<Label class="lblCurrency" text="L('lblCurrency')"></Label>
						</View>
						<Label class="lblSubTitle" text="L('lblDoubleR')"></Label>
						<View class="vwPrice">
							<ImageView id='imgPrice'/>
							<Label id="lblDoubleR" class="lblDetail"/>
							<Label class="lblCurrency" text="L('lblCurrency')"></Label>
						</View>
						<Label class="lblSubTitle" text="L('lblTripleR')"></Label>
						<View class="vwPrice">
							<ImageView id='imgPrice'/>
							<Label id="lblTripleR" class="lblDetail"/>
							<Label class="lblCurrency" text="L('lblCurrency')"></Label>
						</View>
						<Label class="lblSubTitle" text="L('lblFamiliarR')"></Label>
						<View class="vwPrice">
							<ImageView id='imgPrice'/>
							<Label id="lblFamiliarR" class="lblDetail"/>
							<Label class="lblCurrency" text="L('lblCurrency')"></Label>
						</View>
						<Label class="lblSubTitle" text="L('lblMatrimonialR')"></Label>
						<View class="vwPrice">
							<ImageView id='imgPrice'/>
							<Label id="lblMatrimonialR" class="lblDetail"/>
							<Label class="lblCurrency" text="L('lblCurrency')"></Label>
						</View>
					</View>
				</ScrollView>
			</Window>
		</Tab>
		<Tab id="tabMapa" title="Map" >
			<Window id="winMap"></Window>
		</Tab>
	</TabGroup>
</Alloy>